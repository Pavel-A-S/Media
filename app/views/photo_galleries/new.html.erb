<%= form_for(:photo_gallery, url: photo_galleries_path) do |f| %>
  <%= render partial: 'shared/form_errors',
             locals: { object: @photo_gallery } %>

  <%= f.label :description, t(:description), class: "label" %>
  <%= f.text_field :description, class: "text_field" %>
  <%= f.submit t(:create), class: "button_submit" %>

<% end %>
